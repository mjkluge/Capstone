<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FiltersPopup"
    tools:showIn="@layout/activity_filters">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <SeekBar
            android:id="@+id/seekBar2"
            style="@style/Widget.AppCompat.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="39dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nutritional Restrictions"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <CheckBox
            android:id="@+id/VegeCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vegetarian" />

        <CheckBox
            android:id="@+id/VeganCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vegan" />

        <CheckBox
            android:id="@+id/DairyFreeCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dairy-free" />

        <CheckBox
            android:id="@+id/NutFreeCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nut-free" />

        <CheckBox
            android:id="@+id/GlutenFreeCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gluten-free" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>